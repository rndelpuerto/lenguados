{
 "version": "0.3.3",
 "name": "lenguados",
 "description": "[![License](https://img.shields.io/badge/license-Apache--2.0-blue.svg)](LICENSE)   > **2‑D version** of the *Lenguado* physics‑engine family",
 "keywords": [],
 "author": "Ricardo Nicolás del Puerto Camacho",
 "license": "Apache-2.0",
 "type": "module",
 "private": true,
 "workspaces": [
  "packages/*",
  "docs"
 ],
 "scripts": {
  "build": "npm run build:packages",
  "build:bundles": "npm run rollup",
  "build:packages": "npm run build:bundles",
  "clean": "npm run clean:packages && npm run clean:main",
  "clean-install": "npm run clean && npm run init",
  "clean:main": "rm -rf node_modules package-lock.json",
  "clean:packages": "rimraf packages/*/lib",
  "dist": "npm run build && cross-env NODE_ENV=production npm run dist:packages",
  "dist:bundles": "npm run rollup-dist",
  "dist:packages": "npm run dist:bundles",
  "docs": "npm --workspace docs run build",
  "docs:dev": "npm --workspace docs run start",
  "docs:deploy": "npm --workspace docs run deploy",
  "init": "npm install && pip install -r requirements.txt",
  "prepare": "husky",
  "lint": "npm run lint:js && npm run lint:css",
  "lint:css": "stylelint \"**/*.{css,scss}\" --allow-empty-input",
  "lint:css:fix": "npm run lint:css -- --fix",
  "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
  "lint:js": "eslint .",
  "lint:js:fix": "npm run lint:js -- --fix",
  "format": "prettier --write .",
  "format:check": "prettier --check .",
  "rollup": "cross-env NODE_ENV=development lerna run build",
  "rollup-dist": "cross-env NODE_ENV=production lerna run build",
  "setup": "npm run init && npm run build",
  "pretest": "npm run lint",
  "test": "npm run test:unit",
  "test:unit": "jest --coverage",
  "test:watch": "jest --watch",
  "outdated": "npm run outdated:pkgs",
  "outdated:pkgs": "echo outdated",
  "prerelease": "npm run clean-install && npm run outdated",
  "version": "lerna version --conventional-commits --yes",
  "version:alpha": "npm run prerelease && lerna version prerelease --conventional-commits --preid alpha --yes --no-changelog",
  "version:beta": "npm run prerelease && lerna version prerelease --conventional-commits --preid beta --yes",
  "watch": "cross-env NODE_ENV=development lerna run watch"
 },
 "husky": {
  "config": "husky.config.js"
 },
 "commitlint": {
  "extends": [
   "@commitlint/config-conventional"
  ]
 },
 "repository": {
  "type": "git",
  "url": "git+https://github.com/rndelpuerto/lenguados.git"
 },
 "bugs": {
  "url": "https://github.com/rndelpuerto/lenguados/issues"
 },
 "homepage": "https://github.com/rndelpuerto/lenguados#readme",
 "engines": {
  "node": "^22.14.0"
 },
 "devDependencies": {
  "@commitlint/cli": "^19.8.0",
  "@commitlint/config-conventional": "^19.8.0",
  "@eslint/js": "^9.25.1",
  "@rollup/plugin-commonjs": "^28.0.3",
  "@rollup/plugin-json": "^6.1.0",
  "@rollup/plugin-node-resolve": "^16.0.1",
  "@rollup/plugin-terser": "^0.4.4",
  "@testing-library/jest-dom": "^6.6.3",
  "@types/jest": "^29.5.14",
  "@typescript-eslint/eslint-plugin": "8.30",
  "@typescript-eslint/parser": "8.30",
  "cross-env": "^7.0.3",
  "eslint": "8.57",
  "eslint-config-prettier": "^9.1.0",
  "eslint-define-config": "^2.1.0",
  "eslint-import-resolver-typescript": "^4.3.4",
  "eslint-plugin-import": "2.30",
  "eslint-plugin-jest": "^28.11.0",
  "eslint-plugin-jsdoc": "^48.11.0",
  "eslint-plugin-prettier": "5.1",
  "eslint-plugin-unicorn": "^54.0.0",
  "fast-glob": "^3.3.3",
  "husky": "^9.1.7",
  "jest": "^29.7.0",
  "jest-canvas-mock": "^2.5.2",
  "jest-environment-jsdom": "^29.7.0",
  "lerna": "^8.2.2",
  "lint-staged": "^15.5.1",
  "prettier": "3.2",
  "rimraf": "^6.0.1",
  "rollup": "^4.40.0",
  "rollup-plugin-cleanup": "^3.2.1",
  "rollup-plugin-copy": "^3.5.0",
  "rollup-plugin-dts": "^6.2.1",
  "rollup-plugin-esbuild": "^6.2.1",
  "rollup-plugin-filesize": "^10.0.0",
  "rollup-plugin-peer-deps-external": "^2.2.4",
  "rollup-plugin-polyfill-node": "^0.13.0",
  "rollup-plugin-visualizer": "^5.14.0",
  "stylelint": "16.18",
  "stylelint-config-standard": "^38.0.0",
  "stylelint-order": "^6.0.4",
  "stylelint-prettier": "^5.0.3",
  "ts-jest": "^29.3.2",
  "ts-node": "^10.9.2",
  "typedoc": "^0.28.3"
 }
}
